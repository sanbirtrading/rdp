<div class="row justify-content-center">
    <div class="col-lg-9">
      <div class="table-responsive overflow-hidden">
        <h1>Client List</h1>
        <button class="btn btn-primary my-3">
          <a href="/auth/new-user" style="color: white;">
            Add user
          </a>
        </button>
        <table class="table table-striped mb-0">
          <thead style="background-color: black; color: white">
            <tr>
              <th>ID</th>
              <th>User</th>
              <th>Server num</th>
              <th>Active Servers</th>
              <th>Disabled Servers</th>
            </tr>
          </thead>
          <tbody>
              <% users.forEach( user => { %>
                <tr>
                  <th><%- user.id %></th>
                <th><%- user.first_name %><%- user.last_name %></th>
                <th><%-user.totalServers%></th>
                <th><%-user.totalActiveServers%></th>
                <th><%-user.totalDisabledServers%></th>
                <td>
                  <div class="my-dropdown">
                    <i
                      class="mdi mdi-dots-vertical dropbtn"
                      type="button"
                      id="dropdown-item"
                      data-bs-toggle="dropdown"
                      aria-haspopup="true"
                      aria-expanded="false"
                      data-bs-boundary="viewport"
                    ></i>
                    <div class="dropdown-content">
                      
                      <a href="#">Disable</a>
                      <form
                        action="/user/delete-user/<%- user.id %>"
                        id="delete-user"
                        method="POST"
                      >
                        <button
                          class="button-link"
                          type="submit"
                        >
                          Delete
                        </button>
                      </form>
                      <a href="#">Change Color</a>
                    </div>
                  </div>
                </td>
                </tr>
                <% }); %>
            </tr>
          </tbody>
        </table>
        
        </div>  
    </div>
</div>
  